<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/" asp-append-version="true" />
    <link href="~/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" />
    <title>@ViewBag.Title</title>

</head>
<body>
   <header>
        <partial name="_navBarPartial" />
   </header>

    <div class="min-vh-100 d-flex justify-content-between align-items-center ">
        @RenderBody()
    </div>

    @*--------  footer-------------------*@

    <div class="footer">
        <div class="container">
            <div class="left-section">
                <div class="mealify-logo">

                    <img src="~/images/favicon.png" alt="Resturant-logo">
                    <h2>Resturant</h2>
                </div>
                <h3>Social Media</h3>
                <ul>
                    <li><i class="fa-brands fa-facebook"></i></li>
                    <li><i class="fa-brands fa-twitter"></i></li>
                    <li><i class="fa-brands fa-instagram"></i></li>
                    <li><i class="fa-brands fa-linkedin"></i></li>
                </ul>
            </div>

            <div class="middle-section">
                <div class="subscribe">
                    <h3>Subscribe our Newsletter</h3>
                    <p>
                        Don't miss out on our latest menu updates and exclusive offers - join our newsletter today and
                        stay up-to-date with all things Mealify!
                    </p>

                </div>
@*                 <div class="links">
                    <h3>Quick Links</h3>
                    <ul>
                        <li>Menu</li>
                        <li>About US</li>
                        <li>Testimonial</li>
                        <li>Promo</li>
                        <li>Contact</li>
                        <li>Our Partners</li>
                    </ul>
                </div> *@
            </div>
            <div class="final-section">
                <h3>Get in Touch</h3>
                <ul>
                    <li><i class="fa-solid fa-location-dot"></i><span>A108 Adam Street, New York, NY 535022</li>
                    <li><i class="fa-solid fa-envelope"></i><span>contact@example.com</span></li>
                    
                </ul>
            </div>
        </div>
    </div>
 
    @* --------------js ------------- *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
